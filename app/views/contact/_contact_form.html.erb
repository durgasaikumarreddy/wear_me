<%= form_for Contact.new, url: contact_index_path, remote: true do |f| %>
 <div class="field">
    <% f.label :name %><br />
    <%= f.text_field :name, :placeholder => "Name" %>
  </div>
  
  <div class="field">
    <% f.label :email %><br />
    <%= f.email_field :email, :placeholder => "Email" %>
  </div>
              
  <div class="field">
    <% f.label :mobile %><br />
    <%= f.text_field :mobile, :placeholder => "Mobile Number" %>
  </div>
        
  <div class="field">
    <% f.label :message %><br />
    <%= f.text_field :message, :placeholder => "Message", :class => "message-box" %>
  </div>
            
  <div class="d-flex ">
    <button>
        SEND
    </button>
<% end%>
<div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
</div>
